{
  "project_name": "RemoveBackgroundForVideo",
  "description": "動画から人物の背景を自動的に除去し、透過動画（MOV ProRes 4444）を出力するデスクトップアプリケーション",
  "version": "1.0.0",
  "language": "Python 3.10+",
  "license": "社内利用 (RVMはGPL-3.0)",
  "tech_stack": {
    "gui": "CustomTkinter + tkinterdnd2",
    "ai_model": "RobustVideoMatting (RVM)",
    "deep_learning": "PyTorch",
    "video_processing": ["OpenCV", "ffmpeg"],
    "image_processing": ["Pillow", "NumPy"]
  },
  "features": [
    "AI背景除去（RVM）",
    "GPU対応（CUDA/MPS）",
    "透過MOV出力（ProRes 4444）",
    "音声保持（入力動画の音声を自動含む）",
    "キャンセル機能（一時停止/再開対応）",
    "多重起動防止（ロックファイル方式）",
    "タスクバーアイコン設定",
    "ファイルサイズ自動調整（1023MB上限、解像度/fps自動最適化）",
    "保存完了ダイアログ自動クローズ（3秒）",
    "ドラッグ＆ドロップ対応"
  ],
  "supported_platforms": {
    "primary": ["Windows 10/11 + NVIDIA GPU", "macOS (Apple Silicon M1/M2)"],
    "fallback": "CPU (低速)"
  },
  "input_formats": [".mp4", ".mov", ".m4v"],
  "output_format": "MOV (ProRes 4444 with alpha)",
  "directory_structure": {
    "src/": "ソースコード",
    "tests/": "テストコード",
    "tests/fixtures/": "テスト用動画ファイル",
    "models/": "AIモデル（rvm_mobilenetv3.torchscript）",
    "ffmpeg/": "ffmpeg実行ファイル",
    "scripts/": "ユーティリティスクリプト",
    "docs/": "ドキュメント（マニュアル含む）",
    ".claude/workspace/": "Claude Code設定"
  },
  "entry_point": "python -m src.main",
  "build_scripts": {
    "windows_gpu": "build_gpu.bat",
    "windows_cpu": "build_cpu.bat",
    "macos": "build_mac.sh"
  },
  "test_command": "pytest",
  "total_tests": 145
}
